
@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
                var DanhGia = (List<TechShop.Models.News>)ViewBag.DanhGia;
                var MeoHay = (List<TechShop.Models.News>)ViewBag.MeoHay;
                var TuVanMoiNhat = (List<TechShop.Models.News>)ViewBag.TuVanMoiNhat;
                var TuVan = (List<TechShop.Models.News>)ViewBag.TuVan;
                var Socials = (List<TechShop.Models.Social>)ViewBag.Socials;
}
@section title{
    <title>Tin tức</title>
}

<div class="breadcrumb">
    <ul class="breadcrumb__list">
        <li><a href="/"><i aria-hidden="true" class="fa fa-home"></i></a> <i aria-hidden="true" class="far fa-angle-right"></i></li>
        <li><a href="/">Trang chủ</a> <i aria-hidden="true" class="far fa-angle-right"></i></li>
        <li><a href="/tin-tuc">Tin Tức</a></li>
    </ul>
</div>
<div class="post_category_main">
    <div class="content">
        <div class="content_row1">
            <div class="content_left">
                <div class="block newest_post">
                    <div class="block__header"><span class="block__header__title">ĐÁNH GIÁ</span></div>
                    <div class="block__content">
                        @foreach (var item in DanhGia)
                        {
                            <div class="post">
                                <div class="thumb"><a href="/tin-tuc/chi-tiet/@item.MetaTitle-@item.ID"><img src="@item.Images" alt=""></a></div>
                                <div class="title"><a href="/tin-tuc/chi-tiet/@item.MetaTitle-@item.ID">@item.Title</a></div>
                                <div class="desc">@item.Description</div>
                            </div>
                        }
                    </div>
                    <div class="block__readmore"><a href="/tin-tuc/danh-gia-1">Xem thêm đánh giá</a></div>
                </div>
            </div>
            <div class="content_right">
                <div class="block social">
                    <div class="block__header"><span class="block__header__title">FOLLOW US</span></div>
                    <div class="block__content">
                        @foreach (var item in Socials)
                        {
                            <div class="social-item">
                                @Html.Raw(item.Icon);
                                <a href="@item.Link">@item.Title</a>
                            </div>
                        }
                    </div>
                </div>
                <div class="block review_post">
                    <div class="block__header"><span class="block__header__title">MẸO HAY</span></div>
                    <div class="block__content">
                        @foreach (var item in MeoHay)
                        {
                            <div class="post">
                                <div class="thumb"><a href="/tin-tuc/chi-tiet/@item.MetaTitle-@item.ID"><img src="@item.Images" alt=""></a></div>
                                <div class="title"><a href="/tin-tuc/chi-tiet/@item.MetaTitle-@item.ID">@item.Title</a></div>
                            </div>
                        }
                    </div>
                    <div class="block__readmore"><a href="/tin-tuc/meo-hay-2">Xem thêm mẹo hay</a></div>
                </div>
            </div>
        </div>
        <div class="content_row2">
            <div class="content_left">
                <div class="block">
                    <div class="block__header"><span class="block__header__title">TƯ VẤN MỚI NHẤT</span></div>
                    <div class="block__content newest_video">
                        <div class="post">
                            @foreach (var item in TuVanMoiNhat)
                            {
                                <div class="thumb">
                                    <a href="/tin-tuc/chi-tiet/@item.MetaTitle-@item.ID"><img src="@item.Images" alt=""></a>
                                </div>
                                <div class="title"><a href="/tin-tuc/chi-tiet/@item.MetaTitle-@item.ID">@item.Title</a></div>
                            }
                        </div>
                    </div>
                    <div class="block__readmore"><a href="/tin-tuc/tu-van-3">Xem thêm tư vấn</a></div>
                </div>
            </div>
            <div class="content_right">
                <div class="block">
                    <div class="block__header"><span class="block__header__title">TƯ VẤN</span></div>
                    <div class="block__content newest_videos">
                        @foreach (var item in TuVan)
                        {
                            <div class="post">
                                <div class="thumb">
                                    <a href="/tin-tuc/chi-tiet/@item.MetaTitle-@item.ID"><img src="@item.Images" alt=""></a>
                                </div>
                                <div class="title"><a href="/tin-tuc/chi-tiet/@item.MetaTitle-@item.ID">@item.Title</a></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

