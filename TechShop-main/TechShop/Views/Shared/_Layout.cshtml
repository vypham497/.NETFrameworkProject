            bottom: 100px;
            right: 20px;
            transition: background-color .3s, opacity .5s, visibility .5s;
            opacity: 0;
            visibility: hidden;
            z-index: 1000;
        }

            #back-to-top-btn::after {
                content: "\f077";
                font-family: Font Awesome\ 5 Pro;
                font-weight: normal;
                font-style: normal;
                font-size: 2em;
                line-height: 60px;
                color: #fff;
            }

            #back-to-top-btn.show {
                opacity: 1;
                visibility: visible;
            }
